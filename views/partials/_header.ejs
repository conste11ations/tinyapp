<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="float-right">
        <% if (!username) { %>
        <form class="form-inline" action="/login" method="POST">
          <label class="sr-only" for="inlineFormInputName1">Name</label>
          <input type="text" class="form-control mb-2 mr-sm-2" name="username" id="inlineFormInputName2" placeholder="username" >      
          <button type="submit" class="btn btn-light mb-2">Login</button>
        </form>
          <% } else { %> 
            <form class="form-inline" action="/logout" method="POST">
            <label for="inlineFormInputName2">Logged in as: <%= username %> </label>
            <button type="submit" class="btn btn-light mb-2">Logout</button>
          </form>
            <% } %>
      </div>
    </div>
  </nav>
</header>